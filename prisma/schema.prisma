generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id         Int      @id(map: "PK_notes") @default(autoincrement())
  author_id  Int
  note       String?  @db.VarChar(250)
  drawing    Json?
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
  board_id   Int?
  boards     Board?   @relation(fields: [board_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "board_id")

  @@map("notes")
}

model Board {
  id      Int    @id(map: "PK_boards") @default(autoincrement())
  name    String @db.VarChar(250)
  user_id Int
  notes   Note[]

  @@map("boards")
}
